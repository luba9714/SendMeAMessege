<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_message_sent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_received_message"
        android:padding="10dp"
        android:textColor="@color/purple"
        android:textSize="13sp"
        android:text="lube is the best"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintWidth_max="wrap"

        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/date_time_sent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="8sp"
        android:text="lube is "
        android:layout_marginStart="8dp"
        android:layout_below="@id/text_message_sent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_message_sent"


        />


</androidx.constraintlayout.widget.ConstraintLayout>